<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_carga_codigos_barra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/layout_marginTop_RelativeLayout"
    tools:context="neto.com.mx.verificapedidocedis.CargaCodigosBarraActivity"
    android:background="@color/colorBackVerifica"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0sp"
        android:columnCount="1"
        android:rowCount="6"
        android:layout_weight="0.97">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:paddingTop="20sp"
            android:layout_marginTop="-20sp"
            android:columnCount="4"
            android:rowCount="2"
            android:layout_weight="0.97"
            android:gravity="center"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:weightSum="4"
                >
                <ImageView
                    android:src="@drawable/guardar_menu_front"
                    android:layout_width="0sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="0sp"
                    android:layout_gravity="center"
                    android:onClick="guardarMenuFront"
                    android:tint="@color/colorFuente"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:src="@drawable/finalizar_menu_front"
                    android:layout_width="0sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="0sp"
                    android:layout_gravity="center"
                    android:onClick="finalizarMenuFront"
                    android:tint="@color/colorFuente"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:src="@drawable/consultar_avance_menu_front"
                    android:layout_width="0sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="0sp"
                    android:layout_gravity="center"
                    android:onClick="consultarAvanceMenuFront"
                    android:tint="@color/colorFuente"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:src="@drawable/salir_menu_front"
                    android:layout_width="0sp"
                    android:layout_height="35sp"
                    android:layout_marginTop="0sp"
                    android:layout_gravity="center"
                    android:onClick="salirMenuFront"
                    android:tint="@color/colorFuente"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:weightSum="4"
                >
                <TextView
                    android:text="GUARDAR"
                    android:textColor="@color/colorFuente"
                    android:textSize="11sp"
                    android:layout_width="0sp"
                    android:layout_height="20sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="FINALIZAR"
                    android:textColor="@color/colorFuente"
                    android:textSize="11sp"
                    android:layout_width="0sp"
                    android:layout_height="20sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="VER AVANCE"
                    android:textColor="@color/colorFuente"
                    android:textSize="11sp"
                    android:layout_width="0sp"
                    android:layout_height="20sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="SALIR"
                    android:textColor="@color/colorFuente"
                    android:textSize="11sp"
                    android:layout_width="0sp"
                    android:layout_height="20sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorLineas" />
        <TextView
            android:text="---"
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:layout_marginTop="5sp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/colorNeto"
            android:id="@+id/tiendaTextView" />

        <LinearLayout
            android:layout_height="50sp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="5sp"
            >
            <ImageView
                android:src="@drawable/ico_escan_folio"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                />
            <TextView
                android:text="Escanea los cÃ³digos de barra"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/colorFuente"
                android:id="@+id/textView2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="@dimen/layout_marginTop_LinearLayout"
            >
            <TextView
                android:id="@+id/textView311"
                android:text="---"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:textSize="30sp"
                android:gravity="right"
                android:layout_marginRight="2sp"

                />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="de"
                android:textSize="30sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/textView32"
                android:text="---"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:textSize="45sp"
                android:gravity="center"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/textView33"
                android:text="cajas"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:textSize="30sp"
                android:gravity="left"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="155sp"
            android:paddingTop="0sp"
            android:layout_marginTop="-15sp"
            android:columnCount="1"
            android:rowCount="3"
            android:layout_weight="0.97"
            android:gravity="center"
            android:background="@drawable/border"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0sp"
                android:padding="2sp">
                <TextView android:id="@+id/numeroSerieLabel"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:text="----"
                    android:layout_weight="0.77"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_height="60sp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            >
            <EditText android:id="@+id/codigoBarraText"
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:hint="@string/edit_message"
                android:layout_alignParentTop="true"
                android:layout_marginRight="70sp"
                android:layout_marginEnd="53sp"
                android:onClick="codigoBarraText"/>

            <Button
                android:id="@+id/disminuyeCajasBoton"
                android:background="@drawable/circle_shape_rojo"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:text="-"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20sp"
                android:onClick="restaCaja"
                />
            <Button
                android:id="@+id/cargaCajasBoton"
                android:background="@drawable/circle_shape_verde"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:text="-"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:onClick="sumaCajas"
                />
        </RelativeLayout>

    </GridLayout>




</RelativeLayout>