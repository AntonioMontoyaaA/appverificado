<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_alerta"
        android:scaleType="fitXY"
        android:id="@+id/aBack"
        >
    </ImageView>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_RelativeLayout"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="CONTEO COMPLETO"
        android:id="@+id/text_dialog"
        android:layout_below="@+id/a"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        android:layout_marginBottom="5sp"
        android:textSize="25sp"
        android:textColor="@color/colorFuente"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:text="---"
        android:id="@+id/text_dialog_escaneadas"
        android:layout_below="@+id/text_dialog"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        android:layout_marginBottom="5sp"
        android:textSize="70sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:text="Para este artículo ya se han contado todas las cajas ¿Estás seguro de contar una caja más?"
        android:id="@+id/text_dialog2"
        android:layout_below="@+id/text_dialog_escaneadas"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        android:layout_marginBottom="5sp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:paddingTop="0sp"
        android:layout_marginTop="0sp"
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="0.97"
        android:gravity="center"
        android:layout_below="@+id/text_dialog2"
        >

            <Button
                android:layout_width="70sp"
                android:layout_height="50sp"
                android:text="Si"
                android:textSize="20sp"
                android:id="@+id/btnSi"
                android:gravity="center_vertical|center_horizontal"
                android:layout_below="@+id/text_dialog2"
                android:layout_marginBottom="20sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="40sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_boton_verde"/>

            <Button
                android:layout_width="70sp"
                android:layout_height="50sp"
                android:text="No"
                android:textSize="20sp"
                android:id="@+id/btnNo"
                android:gravity="center_vertical|center_horizontal"
                android:layout_below="@+id/text_dialog2"
                android:layout_marginBottom="20sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_boton"/>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>