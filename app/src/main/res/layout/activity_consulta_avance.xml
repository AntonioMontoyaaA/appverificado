<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pedido_cargado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="-10sp"
    tools:context="neto.com.mx.verificapedidocedis.ConsultaAvanceActivity"
    android:background="@color/colorBackVerifica"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0sp"
        android:columnCount="1"
        android:rowCount="5"
        android:layout_weight="0.97">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:paddingTop="20sp"
            android:layout_marginTop="-20sp"
            android:columnCount="4"
            android:rowCount="2"
            android:layout_weight="0.97"
            android:gravity="center"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:paddingTop="0sp"
                >
                <ImageView
                    android:id="@+id/estatusPedidoValido"
                    android:src="@drawable/regresar_menu_front"
                    android:layout_width="250sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="@dimen/layout_marginLeft_ImageView"
                    android:layout_gravity="center"
                    android:onClick="regresarMenuFront"
                    android:tint="@color/colorFuente"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                >
                <TextView
                    android:text="REGRESAR"
                    android:textColor="@color/colorFuente"
                    android:textSize="11sp"
                    android:layout_width="250sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="@dimen/layout_marginLeft_TextView"
                    android:textAlignment="center"
                    />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorLineas" />

        <LinearLayout
            android:layout_height="60sp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="5sp"
            >
            <ImageView
                android:src="@drawable/ico_escan_folio"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                />
            <TextView
                android:text="Avance  del conteo"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="-5sp"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/colorFuente"
                />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:paddingBottom="0sp"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_weight="0.97"
            android:gravity="center"
            android:background="@drawable/border"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="3"
                >
                <TextView
                    android:text=""
                    android:textSize="20sp"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text=""
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="0sp"
                    android:textColor="@color/colorFuenteAzul"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="Contados"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="0sp"
                    android:textColor="@color/colorFuenteAzul"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow
                android:padding="5sp"
                android:layout_width="match_parent"
                android:weightSum="3"
                >
                <TextView
                    android:text="Artículos"
                    android:textSize="18sp"
                    android:textColor="@color/colorFuenteAzul"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text=""
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/artPickeados"
                    android:textColor="@color/colorNaranjaLoading"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="---"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/artVerificados"
                    android:textColor="@color/colorNaranjaLoading"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow android:padding="5sp"
                android:layout_width="match_parent"
                android:weightSum="3">
                <TextView
                    android:text="Cajas"
                    android:textSize="18sp"
                    android:textColor="@color/colorFuenteAzul"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text=""
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/cajasPickeadas"
                    android:textColor="@color/colorNaranjaLoading"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="---"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/cajasVerificadas"
                    android:textColor="@color/colorNaranjaLoading"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:paddingTop="10sp"
            android:layout_marginTop="0sp"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_weight="0.97"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                >

                <TextView
                    android:text="Artículos"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/colorFuenteAzul"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="Cajas"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/colorFuenteAzul"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:weightSum="2"
                >
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ProgressBar
                        android:id="@+id/progressBarArticulos"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="90sp"
                        android:layout_height="100sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular"
                        />

                    <TextView
                        android:layout_height="60sp"
                        android:layout_width="60sp"
                        android:background="#00000000"
                        android:text="--%"
                        android:textSize="20sp"
                        android:textColor="@color/colorFuenteActivo"
                        android:textStyle="bold"
                        android:layout_alignLeft="@id/progressBarArticulos"
                        android:layout_alignTop="@id/progressBarArticulos"
                        android:layout_alignRight="@id/progressBarArticulos"
                        android:layout_alignBottom="@id/progressBarArticulos"
                        android:layout_marginTop="33sp"
                        android:layout_marginLeft="23sp"
                        android:id="@+id/porcentajeArticulos"
                        />
                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ProgressBar
                        android:id="@+id/progressBarCajas"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="90sp"
                        android:layout_height="100sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular"
                        />

                    <TextView
                        android:layout_height="60sp"
                        android:layout_width="60sp"
                        android:background="#00000000"
                        android:text="--%"
                        android:textSize="20sp"
                        android:textColor="@color/colorFuenteActivo"
                        android:textStyle="bold"
                        android:layout_alignLeft="@id/progressBarCajas"
                        android:layout_alignTop="@id/progressBarCajas"
                        android:layout_alignRight="@id/progressBarCajas"
                        android:layout_alignBottom="@id/progressBarCajas"
                        android:layout_marginTop="33sp"
                        android:layout_marginLeft="23sp"
                        android:id="@+id/porcentajeCajas"
                        />
                </RelativeLayout>
            </TableRow>

        </TableLayout>



    </GridLayout>

</RelativeLayout>
