<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finaliza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="-10sp"
    tools:context="neto.com.mx.verificapedidocedis.FinalizaActivity"
    android:background="@color/colorBackVerifica"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0sp"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_weight="0.97">


        <TextView
            android:text="Has finalizado de verificar este pedido"
            android:textColor="@color/colorFuenteAzul"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginTop="10sp"
            android:textSize="28sp"
            android:gravity="center"
            android:id="@+id/textView1" />

        <Button
            android:id="@+id/finalizaBoton"
            android:background="@drawable/rounded_boton_generico"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:text="Aceptar"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="-50sp"
            android:onClick="regresaMain"
            />


    </GridLayout>

</RelativeLayout>
