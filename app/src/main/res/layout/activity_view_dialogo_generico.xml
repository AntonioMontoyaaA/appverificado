<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_invalido"
        android:scaleType="fitXY"
        android:id="@+id/aBack"
        >
    </ImageView>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/text_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4sp"
            android:layout_marginTop="@dimen/TextView_layout_marginTop"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="4sp"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/layoutBtn"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_below="@+id/text_dialog"
            android:layout_marginTop="0sp"
            android:layout_weight="0.97"
            android:columnCount="1"
            android:gravity="center"
            android:paddingTop="0sp"
            android:rowCount="1">

            <Button
                android:id="@+id/btn1"
                android:layout_width="140sp"
                android:layout_height="50sp"
                android:layout_below="@+id/text_dialog"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="4sp"
                android:background="@drawable/rounded_boton_verde"
                android:gravity="center_vertical|center_horizontal"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="140sp"
                android:layout_height="50sp"
                android:layout_below="@+id/text_dialog"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/rounded_boton"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_below="@+id/layoutBtn"
            android:layout_marginTop="0sp"
            android:layout_weight="0.97"
            android:columnCount="1"
            android:gravity="center"
            android:paddingTop="0sp"
            android:rowCount="1"
            android:visibility="gone">

            <Button
                android:id="@+id/btn3"
                android:layout_width="140sp"
                android:layout_height="50sp"
                android:layout_below="@+id/text_dialog"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="4sp"
                android:background="@drawable/rounded_boton_verde"
                android:backgroundTint="@color/colorAmarilloAlert"
                android:gravity="center_vertical|center_horizontal"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>




    </RelativeLayout>
</FrameLayout>
